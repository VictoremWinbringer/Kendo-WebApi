<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href=@Url.Content("~/Kendo/styles/kendo.common.min.css") rel="stylesheet" />
    <link href=@Url.Content("~/Kendo/styles/kendo.bootstrap.min.css") rel="stylesheet" />
    <link href=@Url.Content("~/Kendo/styles/kendo.bootstrap.mobile.min.css") rel="stylesheet" />
    <script src=@Url.Content("~/Kendo/js/jquery.min.js")></script>
    <script src=@Url.Content("~/Kendo/js/kendo.all.min.js")></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Домашняя страница", "Index", "Home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("API", "Index", "Help", new { area = "" }, null)</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year – приложение ASP.NET</p>
        </footer>
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
